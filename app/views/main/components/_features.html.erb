<div class="container mt-8 mb-6 text-center">

  <div style='display: block;
    margin-left: auto;
    margin-right: auto;
    width: 50%;'>
        <%= image_tag('center_image.png') %>
      <% if current_user %>

        <% else %>
          <% allow_greenlight_accounts = allow_greenlight_accounts? %>
          <% if allow_greenlight_accounts %>
            <%= link_to t("login"), signin_path, :class => "btn btn-primary mx-2 sign-in-button" ,:style => "border-radius:30px; margin-top: 50px;" %>
          <% elsif Rails.configuration.loadbalanced_configuration %>
            <%= link_to t("login"), omniauth_login_url(:bn_launcher), :class => "btn btn-primary mx-2 sign-in-button" ,:style => "border-radius:30px; margin-top: 50px;" %>
          <% else %>
            <%= link_to t("login"), signin_path, :class => "btn btn-primary mx-2 sign-in-button" ,:style => "border-radius:30px; margin-top: 50px;" %>
          <% end %>

          <% if allow_user_signup? && allow_greenlight_accounts %>
            <%= link_to t("signup.title"), signup_path, :class => "btn btn-primary mx-2 sign-in-button" ,:style => "border-radius:30px; margin-top: 50px;" %>
          <% end %>
        <% end %>
  </div>
</div>
